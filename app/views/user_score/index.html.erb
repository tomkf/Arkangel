
<% health_score = [] %>
<% bmi = [] %>
<% dates = [] %>
<% @userscoresweek.each do |score| %>
  <% health_score << score.health_score.round %>
  <% bmi << score.bmi %>
  <% dates << score.logdate %>
<% end %>

<% data = {
  labels: dates,
  datasets: [
    {
        label: "Health score",
        backgroundColor: "rgba(151,187,205,0.2)",
        borderColor: "rgba(151,187,205,1)",
        data: health_score
    },
     {
        label: "BMI",
        backgroundColor: "rgba(151,187,205,0.5)",
        borderColor: "rgba(151,187,205,0.5)",
        data: bmi
    }
  ]
}
options = { height: 250 }
 %>


<div class="container">

  <%= line_chart data, options %>
</div>
