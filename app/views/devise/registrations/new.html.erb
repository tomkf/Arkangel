<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-xs-12 col-sm-8 col-lg-4">
      <div class="form-login">
        <h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { class:"inputs" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { class:"inputs" }%>
          <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { class:"inputs" }%>

        <div class="form-group">
          <label class="form-control-label age required" for="user_dob">
            Date of birth <abbr title="required">*</abbr>
          </label>
          <input type="text" aria-required="true" placeholder="Select Date..." autofocus="autofocus" required="required" class="form-control required inputs flatpickr" name="user[dob]" id="user_dob" value="<%= @user.dob.to_s %>">
        </div>

    <%= f.input :smoker, collection: [ "never", "former", "current" ],
                autofocus: true,
                input_html: { class:"inputs" } %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class:"inputs" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class:"inputs" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign Up", class: "btn btn-primary", id:"action_button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

      </div>

    </div>
  </div>
</div>

<script>
  flatpickr(".flatpickr", {
    dateFormat: "Y-m-d"
  })
</script>
