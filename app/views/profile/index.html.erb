<div class="wrap">

<div class="profile-container">
 <%= image_tag "profile.png", class: "profile-landing" %>
<div class="side-icons">
 <%= image_tag "vitals/1_Sleep.png", class: "icon" %>
 <%= image_tag "vitals/3_Steps.png", class: "icon" %>
 <%= image_tag "vitals/3_Mind.png", class: "icon" %>
 <%= image_tag "vitals/4_Energy.png", class: "icon" %>
</div>
</div>


<div class="big_title">
  <div class="container">
    <h3>Your <b>Health Score</b></h3>
    <div class="score d-flex align-items-end" id="main_title">
      <h1><%= @health_score.round(1) %></h1>
      <h2>/100</h2>
    </div>
    <%= link_to "Score history", graph_path, style:"color: white;" %>
  </div>
</div>


 <div class="user-title">
  <h3>
  <%=  @user.first_name %>'s vitals
  </h3>
  <span>
  <%=  @user.age %> years old
  </span>
  <!--
  <span>
     user.user_params.height
   user.user_params.weight
  </span> -->
 </div>



<div class="dashboard">
 <div class="time-toggle">
  <span> Today </span>
  <span> Weekly </span>
  <span> Monthly </span>
 </div>






  <div class="stats-display">
    <div class="stat-item">
     <p> Sleep </p>
     <%= image_tag "vitals/1_Sleep.png", class: "icon" %>
     <span>
      7.5 Hrs
      <p>Slept at 10:45 pm</p>
      </span>
     </div>

       <div class="stat-item">
             <p> Focus </p>
     <%= image_tag "vitals/3_Mind.png", class: "icon" %>
    <span>
      4.5 hours
      <p>75% productivity</p>
    </span>
   </div>

   <div class="stat-item">
           <p> Food </p>
   <%= image_tag "vitals/4_Energy.png", class: "icon" %>
  <span>
    850 Calories
    <p>60% of daily caloric goal met</p>
  </span>
  </div>

   <div class="stat-item">
         <p> Steps </p>
    <%= image_tag "vitals/3_Steps.png", class: "icon" %>
    <span>
      5, 495 steps
      <p>Synched 15 mins ago</p>
    </span>
   </div>

   <div class="stat-item">
         <p> Workout </p>
     <%= image_tag "vitals/6_Workout.png", class: "icon" %>
     <span>
      25 mins
      <p>Light jogging - 4 hours ago</p>
    </span>
    </div>

    </div>

  </div>

</div>

<%= render "shared/footer" %>








